@page "/client"
@using LaweyrServices.Web.Client.Shared.Administration.Pages.Components
@using LaweyrServices.Web.Shared.WorkingTimeModels
@using System.Globalization

@inject HttpClient Http


@layout Shared.AdministrationLayout

<AuthorizeView Roles="User">
    <Authorized>
        <div class="content">
            <div class="container-fluid">
                @if (wteModel == null)
                {
                    <Spiner></Spiner>
                }
                else if (!wteModel.Any())
                {
                    <div class="row">
                        <NoUpcomingLawyerHours></NoUpcomingLawyerHours>
                    </div>
                }
                else
                {
                    <div class="col-md-9">
                        <div class="row">
                            <div class="col-lg-12 col-xl-12">
                                <h3 class="text-center">Предстоящи резервации</h3>
                                @foreach (var wte in wteModel.Where(x => x.StarFrom.ToLocalTime() > DateTime.Now.ToLocalTime() && x.IsCanceled == false))
                                {
                                    <UserWteCard Wte="@wte" OnDoneCallback="GetValue"></UserWteCard>
                                }
                               <HelpCard></HelpCard>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        @{
            NavigationManager.NavigateTo("/notfound");
        }
    </NotAuthorized>
</AuthorizeView>


@code {

    private List<WorkingTimeExceptionUserViewModel>? wteModel;

    protected override async Task OnInitializedAsync()
    {
       
        wteModel = await this.Http.GetFromJsonAsync<List<WorkingTimeExceptionUserViewModel>>("User/GetNextUserWorkingTimeExceptions");
      
        await base.OnInitializedAsync();

    }
    void GetValue(WorkingTimeExceptionUserViewModel? Wte)
    {
        wteModel.Remove(Wte);
    }
}
