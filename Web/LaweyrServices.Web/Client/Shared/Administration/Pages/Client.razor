@page "/client"
@using LaweyrServices.Web.Shared.WorkingTimeModels

@inject HttpClient Http


@layout Shared.AdministrationLayout

<AuthorizeView Roles="User">
    <Authorized>

        <div class="content">
            <div class="container-fluid">
                @if (wteModel == null)
                {
                    <p>loading</p>
                }
                else if (!wteModel.Any())
                {
                    <div class="row">
                        <div class="col-lg-9">
                            <div class="row">
                                <div class="col-lg col-xl-8">
                                    <div class="box">
                                        <h2>Здравей, Нешо!</h2>
                                        <p>Използвай формата за търсене – бързо и лесно ще намериш своя лекар и ще резервираш час за преглед напълно безплатно!</p>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg col-xl-8">
                                    <div class="box text-muted text-center">
                                        <div class="icon-circle gray">
                                            <i class="fal fa-calendar-alt"></i>
                                        </div>
                                        <h4>Няма предстоящи часове за преглед</h4>
                                        <p>Намерете лекар и резервирайте час за преглед сега!</p>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg col-xl-8">
                                    <footer class="alert alert-success help-message" role="alert">
                                        <h5>Имате нужда от помощ?</h5>
                                        Разгледайте страницата ни с <a href="https://superdoc.bg/faq">Често задавани въпроси</a> или ни пишете на <a href="mailto: hello@superdoc.bg">hello@superdoc.bg</a>
                                    </footer>
                                </div>
                            </div>

                        </div>
                    </div>
                }
                else
                {
                    <div id="pat_appointments" class="tab-pane fade show active">
                        <div class="card card-table mb-0">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-responsive table-hover table-center mb-0">
                                        <thead>
                                            <tr>
                                                <th>Адвокат</th>
                                                <th>За дата</th>
                                                <th>Час</th>
                                                <th>Дата на запазване</th>
                                                <th>Status</th>
                                                <th>Откажи</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var wte in wteModel)
                                            {
                                                <tr>
                                                    <td>
                                                        <h2 class="table-avatar">
                                                            <a href="doctor-profile.html" class="avatar avatar-sm mr-2">
                                                                <img class="avatar-img rounded-circle" src="@wte.WorkingTime.Companies.First().ImgUrl" alt="User Image">
                                                            </a>
                                                            <a href="doctor-profile.html">@wte.WorkingTime.Companies.First().Names<span>Dental</span></a>
                                                        </h2>
                                                    </td>
                                                    <td>@wte.StarFrom.Date.ToString("dd/MM/yyyy")</td>
                                                    <td><span class="d-block text-info">@wte.StarFrom.TimeOfDay</span></td>
                                                    <td>@wte.CreatedOn.ToString("dd/MM/yyyy")</td>

                                                    @if (wte.IsCanceled)
                                                    {
                                                        <td><span class="badge badge-pill bg-danger">Отменена</span></td>
                                                    }
                                                    else if (wte.IsApproved == true)
                                                    {
                                                        <td><span class="badge badge-pill bg-success-light">Одобрена</span></td>
                                                    }
                                                    else
                                                    {
                                                        <td><span class="badge badge-pill bg-warning">Чакаща</span></td>
                                                    }
                                                    @if (!wte.IsCanceled)
                                                    {
                                                        <td>
                                                            <div class="table-action">
                                                                @if (wte.StarFrom.Date > date.Date)
                                                                {
                                                                    <a href="" onclick="@(() =>SetWorkingTimeExceptionToFree(wte.Id))" class="btn btn-sm bg-danger">
                                                                        <i class="oi oi-trash"></i> Откажи
                                                                    </a>
                                                                }
                                                            </div>
                                                        </td>
                                                    }
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                }
            </div>
        </div>



    </Authorized>
    <NotAuthorized>
        @{
            NavigationManager.NavigateTo("/Profile");
        }
    </NotAuthorized>
</AuthorizeView>


@code {

    private List<WorkingTimeExceptionUserViewModel>? wteModel;
    DateTime date = DateTime.UtcNow.ToLocalTime();

    protected override async Task OnInitializedAsync()
    {
        //    #if DEBUG
        //await Task.Delay(10000);
        //    #endif
        wteModel = await this.Http.GetFromJsonAsync<List<WorkingTimeExceptionUserViewModel>>("User/GetUserWorkingTimeExceptions");
        await base.OnInitializedAsync();

    }

    async void SetWorkingTimeExceptionToFree(string wteId)
    {
        var wtexception = this.wteModel.FirstOrDefault(x => x.Id == wteId);

        var response = await Http.PutAsJsonAsync("User/SetWorkingTimeExceptionToFree", wteId);
        if (response.IsSuccessStatusCode)
        {
            //delete from list wteModel wtexception
            wteModel.Remove(wtexception);
        }

        StateHasChanged();
    }
}
