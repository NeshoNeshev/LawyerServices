@page "/notary-office/{notaryId}"
@using LaweyrServices.Web.Shared.DateModels
@using LaweyrServices.Web.Shared.LawyerViewModels
@using LaweyrServices.Web.Shared.NotaryModels
@using LaweyrServices.Web.Shared.WorkingTimeModels


@inject NavigationManager navigationManager
@inject AuthenticationStateProvider AuthenticationStateProvider

@inject IHttpClientFactory ClientFactory


<div class="content">
    <div class="container-fluid">
        @if (this.model == null)
        {
            <p><em>Loading...</em></p>
        }
        else
        {
            <!-- Doctor Widget -->
            <div class="card shadow">
                <div class="card-body">
                    <div class="doctor-widget">
                        <div class="doc-info-left">
                            <div class="doctor-img">
                                <img src="@model?.ImgUrl" class="img-fluid" alt="@model?.Names">
                            </div>
                            <div class="doc-info-cont">
                                <h1>@model?.Names</h1>
                               
                                <p>@model?.AboutText</p>
                               
                                <div class="clinic-details">
                                    <p class="doc-location"><i class="fas fa-map-marker-alt"> </i> @model?.TownName/ @model?.Address <a href=@($"https://www.google.com/maps/place/{model?.TownName} {model?.Address}") target="blank"> намери адрес</a></p>
                                    <ul class="clinic-gallery">
                                        @if (model?.WorkInSaturday == true)
                                        {
                                            <li style="float: left;"><i class="oi oi-check"></i><span> Работи в събота</span></li>
                                        }
                                        @if (model?.WorkInSunday == true)
                                        {
                                            <li style="float: left;"><i class="oi oi-check"></i> Работи в неделя</li>
                                        }
                                       
                                    </ul>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <!-- /Doctor Widget -->
            <!-- Doctor Details Tab -->
            <div class="card shadow">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="row">
                                <div class="card-header">
                                    <h2 class="card-title mb-0">За @model?.Names</h2>
                                </div>
                                <p class="card-text" style="margin-bottom: 40px; margin-top: 40px;">
                                    @model?.AboutText
                                </p>
                            </div>
                            <div class="row">
                               
                                <div class="container">
                                    <h2 style="margin-bottom:20px;">Намери @model?.Names</h2>
                                    <iframe src=@($"https://maps.google.com/maps?q=%20{model?.Address},%20{model?.TownName}&t=&z=13&ie=UTF8&iwloc=&output=embed") width="100%" height="380" frameborder="0" style="border:0" allowfullscreen></iframe>
                                </div>
                                <div class="container" style="margin-top:20px;">
                                    <h2 style="margin-top:20px;">Професионална проверка</h2>

                                    <p>LawConnect е проверил независимо  @model?.Names и потвърди:</p>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="row">
                                                <div class="col-sm">
                                                    <span>Потвърдено пълно име</span>
                                                </div>

                                                <div class="col-sm">
                                                    <p>@model?.Names </p>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-sm">
                                                    <span>Юридически статус</span>
                                                </div>

                                                <div class="col-sm">
                                                    <p>Адвокат</p>
                                                </div>
                                            </div>
                                            
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="col-md-6">
                           
                        </div>
                    </div>
                  
                </div>
            </div>
        }
    </div>
</div>


<style>
    .lawyer-row, .property {
        font-size: 0;
        line-height: 20px;
        margin-bottom: 0.7rem;
        position: relative;
        white-space: nowrap;
    }

    .lawyer-property, .property-label {
        vertical-align: top;
        width: 50%;
    }

        .lawyer-property span, .property-label span {
            background: #fff;
            display: inline-block;
            font-weight: 700;
            position: relative;
            z-index: 1;
        }

    lawdetails {
        float: left;
        margin-top 10px;
    }

    .customcard {
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        width: 40%;
    }

        .customcard:hover {
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
        }


    .shadow {
        box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
        margin-bottom: 20px;
    }

    .doctor-img {
        -ms-flex: 0 0 250px;
        flex: 0 0 250px;
        width: 250px;
    }

        .doctor-img img {
            border-radius: 5px;
        }

    .rz-view-header .rz-slot-hour-header {
        flex: none;
        width: 25px;
    }

    .rz-event-content {
        cursor: pointer;
    }
</style>
@code {
    int zoom = 3;
    bool showMadridMarker;
    DateTime? value = DateTime.Now;
    DateTime? date;

    [Parameter]
    public string? notaryId { get; set; }

    private NotaryViewModel? model;
   

   
    protected override async Task OnInitializedAsync()
    {
       
        var client = ClientFactory.CreateClient("LaweyrServices.Web.ServerAPI.NoAuthenticationClient");

        base.OnInitializedAsync();

        try
        {
            model = await client?.GetFromJsonAsync<NotaryViewModel>($"Notary/GetNotary?id={notaryId}");

        }
        catch
        {
            this.NavigationManager.NavigateTo("/notfound");
        }
    }
    

    void OnChange(DateTime? value, string name, string format)
    {

    }
   }
